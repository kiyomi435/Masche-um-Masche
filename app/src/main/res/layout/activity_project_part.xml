<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:padding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_back_button"
                android:contentDescription="Bearbeiten"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/text_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projektname"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/text_part_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teilname"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_edit"
                android:src="@drawable/icon_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Bearbeiten"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageButton
                        android:id="@+id/button_substract_all_knots"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_round_button"
                        android:src="@drawable/icon_delete_all"
                        android:contentDescription="Alle Maschen abnehmen"
                        android:scaleType="centerInside"
                        android:padding="12dp" />
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:id="@+id/button_substract_knot"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_round_button"
                        android:src="@drawable/icon_delete"
                        android:contentDescription="Masche abnehmen"
                        android:scaleType="centerInside"
                        android:padding="12dp" />
                </LinearLayout>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_knots"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="rechne mit:"
                        android:scaleType="centerInside" />
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/input_field"
                        android:layout_width="36dp"
                        android:layout_height="20dp"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:padding="0dp"
                        android:includeFontPadding="false"
                        android:background="@android:drawable/edit_text"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/current_row"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="20"
                android:textSize="50sp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside" />
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/button_add_knot"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_round_button"
                android:src="@drawable/icon_add"
                android:contentDescription="Masche zunehmen"
                android:scaleType="centerInside"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Bildbereich (maximale Größe) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progress_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:layout_gravity="end"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
    </LinearLayout>
</RelativeLayout>